{
  "name": "EmePath",
  "private": true,
  "type": "module",
  "scripts": {
    "curated:ingest:starter": "node gateway/scripts/ingest_starter_curated.mjs",
    "curated:ingest:starter:bash": "bash gateway/scripts/ingest_starter_curated.sh",
    "curated:search:test": "node gateway/scripts/test_curated_search.js",
    "curated:ingest:nightly": "node gateway/scripts/ingest_nightly_curated.mjs",
    "annotate:text": "node gateway/scripts/annotate_text.mjs",
    "smoke:rooms": "node gateway/rooms/tests/smoke.rooms.test.js",
    "smoke:memory": "node gateway/memory/tests/smoke.memory.test.js",
    "db:backup": "scripts/backup_db.sh",
    "daily": "node scripts/daily_maint.js",
    "lint": "eslint \"gateway/**/*.{js,mjs,cjs}\"",
    "format": "prettier --write .",
    "py:lint": "ruff check gateway/tools",
    "py:format": "black gateway/tools",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "npm run -s start:both",
    "start:emepath": "node EmePath.js --server",
    "start:both": "sh -c 'node scripts/start-stack.js --start & node EmePath.js --server &'",
    "stack:start": "node scripts/start-stack.js --start",
    "stack:stop": "node scripts/start-stack.js --stop",
    "stack:shutdown": "node scripts/start-stack.js --stop",
    "stack:force-stop": "node scripts/start-stack.js --stop --force",
    "stop": "npm run -s stack:stop",
    "restart": "npm run -s stop && npm run -s start",
    "stack:searx": "node scripts/start-stack.js --searxng-only",
    "stack:check": "node scripts/start-stack.js --check",
    "ci": "npm run stack:check && vitest run -c vitest.config.ts",
    "searx:compose:up": "docker compose -f scripts/docker-compose.searxng.yml up -d || docker-compose -f scripts/docker-compose.searxng.yml up -d",
    "searx:compose:down": "docker compose -f scripts/docker-compose.searxng.yml down || docker-compose -f scripts/docker-compose.searxng.yml down",
    "searx:logs": "docker compose -f scripts/docker-compose.searxng.yml logs --tail 10 || docker-compose -f scripts/docker-compose.searxng.yml logs --tail 10",
    "models:resolve": "node scripts/resolve-models.js",
    "prompts:preview": "node scripts/preview-prompt.mjs --",
    "chat:cli": "node gateway/scripts/chat-cli.js --"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "better-sqlite3": "^12.2.0",
    "eslint-plugin-import": "^2.32.0",
    "express": "^5.1.0",
    "globals": "^16.4.0",
    "supertest": "^7.1.4"
  }
}
